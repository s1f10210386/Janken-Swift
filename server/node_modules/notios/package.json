    "@types/react": "^18.2.12",
    "@types/source-map-support": "^0.5.4",
    "@types/wcwidth": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "arg": "^5.0.1",
